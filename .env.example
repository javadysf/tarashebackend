# Server Configuration
PORT=4000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/tarashe

# Security
JWT_SECRET=your_very_secure_jwt_secret_key_here_change_in_production_min_32_chars
COOKIE_SECRET=your_cookie_secret_key_here_change_in_production

# URLs
PUBLIC_BASE_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3001
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Content Security Policy
CSP_IMG_SRC=https://res.cloudinary.com

# Cloudinary (Image Upload)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# SMS Service (Melipayamak)
SMS_API_URL=https://console.melipayamak.com/api/send/shared/YOUR_API_KEY
SMS_REGISTER_BODYID=389104
SMS_PASSWORD_RESET_BODYID=390389

# Sentry (Error Monitoring) - Optional
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Payment Gateway (Zarinpal) - Optional
ZARINPAL_MERCHANT_ID=
ZARINPAL_SANDBOX=true
